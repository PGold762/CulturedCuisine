<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cultured Cuisines</title>
  <link rel="stylesheet" href="https://unpkg.com/@splidejs/splide@2.4.12/dist/css/splide.min.css">
  <link rel="stylesheet" href="https://unpkg.com/@splidejs/splide@2.4.12/dist/css/themes/splide-default.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/purecss@3.0.0/build/pure-min.css"
    integrity="sha384-X38yfunGUhNzHpBaEBsWLO+A0HDYOQi8ufWDkZ0k9e0eXz/tH3II7uKZ9msv++Ls" crossorigin="anonymous">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/css/signin.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <header class="display-flex justify-space-between align-center p-2">
    <h1>
      Let's get cooking!
    </h1>
  </header>

  // Work in progress below check everything dont assume right
  <main class="container container-fluid mt-5">
    {{{body}}}
    <ul class="recipe_list">
      {{#each recipes}}
      <li>
        {{#with id}}
        {{nameClean}}
        {{/with}}
        <!-- Add the Handlebars template here -->
        <div class="recipe">
          <h2>{{title}}</h2>
          <h3>Ingredients:</h3>
          <ul>
            {{#each extendedIngredients}}
            <li>{{name}} - {{original}}</li>
            {{/each}}
          </ul>
          <h3>Instructions:</h3>
          <ol>
            {{#each analyzedInstructions.[0].steps}}
            <li>{{step}}</li>
            {{/each}}
          </ol>
        </div>
      </li>
      {{/each}}
    </ul>
  </main>
  <script src="/js/script.js"></script>
  <script src="https://unpkg.com/@splidejs/splide@2.4.12/dist/js/splide.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  {{#if signed_in}}
  <script src="/js/signout.js"></script>
  {{/if}}
</body>

</html>